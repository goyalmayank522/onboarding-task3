<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<% if current_user and current_user.id == @article.user_id %>
        <%= link_to 'Edit', edit_article_path(@article) %> | <%= link_to "Delete this Article", article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %>	
<% end %>
<%= link_to 'Back', articles_path %>
